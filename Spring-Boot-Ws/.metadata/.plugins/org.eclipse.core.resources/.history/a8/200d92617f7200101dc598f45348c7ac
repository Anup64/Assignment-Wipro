package com.example.movie_booking_app_rest_api_using_relationship.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.movie_booking_app_rest_api_using_relationship.model.Customer;
import com.example.movie_booking_app_rest_api_using_relationship.repository.CustomerRepository;



@Service
public class CustomerService {
    @Autowired
    private CustomerRepository customerRepository;

    public Customer saveCustomer(Customer customer) {
        return customerRepository.save(customer);
    }

    public List<com.example.ecommerce_app.model.Customer> getAllCustomers() {
        return customerRepository.findAll();
    }
}
