<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean for FlightService -->
    <bean id="flightService" class="com.airline.service.FlightService" />

    <!-- Bean for TicketService with dependency injected -->
    <bean id="ticketService" class="com.airline.service.TicketService">
        <property name="flightService" ref="flightService" />
    </bean>

</beans>